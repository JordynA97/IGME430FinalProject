<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>GameLibrary</title>
  <link href="https://fonts.googleapis.com/css2?family=Abel&display=swap" rel="stylesheet">
  <script crossorigin src="https://unpkg.com/react@15/dist/react.min.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@15/dist/react-dom.min.js"></script>
  <script crossorigin src="https://unpkg.com/prop-types/prop-types.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.6.2/remarkable.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>  
  <nav><a href="/login"><img id="logo" src="/assets/img/logo.png" alt="logo"/></a>
    <button id="logoutButton"><div class="navlink"><a href="/logout">Log out</a></div></button>
    <button id="profileButton"><div class="navlink"><a href="/profile">View Profile</a></div></button>
  </nav>
  <h1>Public Posts and Reviews</h1>

  {{#if games}}
    {{#each games}}
      <div id='{{this}}'>
        <h3>Game: {{this.name}}</h3>
        <h3> Review: {{this.review}}</h3>
        <img id="divider" src='/assets/img/divider.png'>
      </div>
    {{/each}}
  {{/if}}
</body>
</html>